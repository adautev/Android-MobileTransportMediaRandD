<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bg.saorsa.sts.mobileticketing.ByuTicketFragment">

    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Купи билет" />

        <Button
            android:id="@+id/btn_BuyTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Използвай билет за еднократно пътуване"
            android:onClick="btn_BuyTicket_Click" />

        <ProgressBar
            android:id="@+id/pb_buyingTicket"
            style="?android:attr/progressBarStyle"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="invisible"
            />
    </LinearLayout>

</FrameLayout>
